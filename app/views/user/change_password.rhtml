<%= error_messages_for :user %>
<div class="sectionheader">Change Password for <%= h(@user.login) %></div>
<% form_for :user do |f| %>
<table>
  <tr>
    <td>New password:</td>
    <td><%= f.password_field :password %></td>
  </tr>
  <tr>
    <td>Confirm password:</td>
    <td><%= f.password_field :password_confirmation %></td>
  </tr>
</table>
<%= submit_tag "Change" %>
<% end %>
